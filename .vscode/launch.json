  "version": "0.2.0",
  "configurations": [
    {
      "name": "Install",
      "request": "launch",
      "runtimeArgs": ["run-script", "dev"],
      "runtimeExecutable": "pnpm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal"
    },
    {
      "name": "Install and test in System Monitor",
      "request": "launch",
      "runtimeArgs": ["run-script", "dev"],
      "runtimeExecutable": "pnpm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "startDebugging",
        "name": "Run System Monitor",
        "pattern": "./bin/install.sh",
        "killOnServerStop": false
      }
    },
    {
      "name": "Install and test in Plasmoid Viewer",
      "request": "launch",
      "runtimeArgs": ["run-script", "dev"],
      "runtimeExecutable": "pnpm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "startDebugging",
        "name": "Plasmoid Viewer",
        "pattern": "./bin/install.sh",
        "killOnServerStop": false
      }
    },
    {
      "command": "plasma-systemmonitor --page-name Test && exit",
      "name": "Run System Monitor",
      "request": "launch",
      "type": "node-terminal"
      // "internalConsoleOptions": "neverOpen"
    },
    {
      "command": "plasmoidviewer -a org.kde.plasma.systemmonitor && exit",
      "name": "Plasmoid Viewer",
      "request": "launch",
      "type": "node-terminal"
      // "internalConsoleOptions": "neverOpen"
    }
